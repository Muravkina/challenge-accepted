<header>
  <% if current_user %>
    <%= link_to "Profile", current_user %>
    <%= link_to "Log Out", signout_path %>
  <% else %>
    <%= link_to "Home", root_path %>
  <% end %>
</header>

<img src="<%= @challenge.img_url%>" width= "60%" height= "100px">
<h1><%= @challenge.name %></h1>
<% if @challenge.is_public %>
  <p> Public </p>
<% else %>
  <p> Private </p>
<% end %>
<%= link_to 'Description', @challenge %>
<%= link_to 'Accomplished', challenge_accepted_challenges_path(@challenge) %>
<% @accomplished_challenges.each do | accomplished | %>
  <h1><a href="/users/<%= accomplished.user.id %>"><%= "#{accomplished.user.first_name} #{accomplished.user.last_name}" %></a> - <span><a href="challenges/<%=accomplished.challenge.id %>>"><%= accomplished.challenge.name %></a></span></h1>
  <img src="<%= accomplished.proofs[0].proof_url %>">
  <%= accomplished.remark %>
<% end %>

