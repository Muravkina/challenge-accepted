<header>
  <div class="row">
    <%= image_tag "logo.png", class: "logo" %>
    <div class="nav">
      <%= link_to "Profile", current_user, class: "button" %>
      <%= link_to "Challenges", challenges_path, class: "button" %>
      <%= link_to "Log Out", signout_path, class: "button" %>
    </div>
  </div>
</header>
<div class="container">
  <div class="sign_up form">
    <h1>Create New Challenge</h1>
     <% if @challenge.errors.any? %>
        <ul class="form_errors">
        <% @challenge.errors.full_messages.each do |message| %>
          <li><%= message %></li>
        <% end %>
        </ul>
      <% end %>
    <%= form_for [@user, @challenge] do |form| %>
      <%= render form %>
      <div class="buttons challenge">
        <%= form.submit 'Create Challenge', class: "button" %>
        <%= form.submit "clear", :type => "reset", class: "button" %>
      </div>
    <% end %>
  </div>
</div>
