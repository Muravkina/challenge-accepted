<% if @user %>

  <div class= "tabs">
    <%= link_to 'Created', user_challenges_path(@user) %>
    <a href="/users/<%= @user.id %>/challenges/in_progress">In progress</a>
    <a href="/users/<%= @user.id %>/challenges/accomplished">Accomplished</a>
  </div>

  <div class="spec_user_challenges">
    <% @user_created_challenges.each do |created_challenge| %>
      <img src="<%= created_challenge.img_url %>" width="50px" height="50px">
      <p><%= link_to created_challenge.name, user_challenge_path(@user, created_challenge) %></p>
      <p><%= created_challenge.description %></p>
    <%= content_tag :div, class: 'user_challenge', data:{ user_id: @user.id} do %>
  </div>
  <% end %>

<% end %>
<% else %>
  <% @challenges.each do |challenge| %>
    <p><img src="<%= challenge.img_url %>" width = "100px" height="100px"></p>
    <p><%= link_to challenge.name, challenge %></p>
    <p><%= challenge.description %></p>
  <% end %>
<% end %>

