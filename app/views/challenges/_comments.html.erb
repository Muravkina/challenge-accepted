<div class="container challenge_comments">

      <input type="text" name="comment" id="comment">
      <button class="submit_comment">Add comment</button>
    </form>
      <% @challenge.comments.each do |comment| %>
        <div class="comments">
        <span class="comment_author"><%= "#{comment.user.first_name} #{comment.user.last_name} " %></span>
        <span class="comment_body"><%= comment.body %></span>
      </div>
      <% end %>

</div>
